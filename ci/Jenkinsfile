pipeline {
    agent any

    stages {

        stage('Checkout') {

           options {
                timeout(time: 5, unit: 'MINUTES')
            }

            steps {
                git 'https://github.com/danielitogomez/automation-scanning.git'
            }
        }

        stage('Run Scan') {

           options {
                timeout(time: 10, unit: 'MINUTES')
            }

            steps {
                sh './run.sh'  
            }

            post {
                always {
                    sh 'echo "todo bien?"'
                }
            }
        }       
        
    }
}